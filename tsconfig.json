{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "react",
      "strict": true,
      "lib": [
        "DOM"
      ],
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@": ["src/*"],
        "@components/*": ["src/components/*"],
      }
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
